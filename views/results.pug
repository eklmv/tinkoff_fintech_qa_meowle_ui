extends extends/main
block title
  | Все имена
block append styles
block append scripts
block content
  include includes/search-filter
  .container
    .columns
      .column.is-2
        figure.image.is-64x64.is-pulled-right
          img(src='/img/cat.png')
      .column
        each group in groups
          .search-result-group
            div
              span.title.is-4 #{group.title}
              span.is-pulled-right.has-text-grey.is-size-7 #{group.count}
            br
            div
              .tags
                each cat in group.cats
                  span.tag.is-size-5
                    if cat.gender == 'female'
                      span.icon.has-text-danger
                        i.fas.fa-venus
                    else if cat.gender == 'male'
                      span.icon.has-text-info
                        i.fas.fa-mars
                    else if cat.gender == 'unisex'
                      span.icon.has-text-primary
                        i.fas.fa-venus-mars
                    a(href='/cats/' + cat.id, style={ color: 'black' }) #{cat.name}
            hr